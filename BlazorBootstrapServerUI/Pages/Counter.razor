@page "/counter"
@inject ToastService ToastService

<PageTitle>Counter</PageTitle>

<h1>Counter</h1>

<p role="status">Current count: @currentCount</p>

<button class="btn btn-primary" @onclick="IncrementCount">Click me</button>

@code {
    private int currentCount = 0;

    private void IncrementCount()
    {
        currentCount++;

        if (currentCount % 5 == 0)
        {
            ToastService.Notify(new ToastMessage(ToastType.Success, "Count update", "Divisible by 5!"));
        }
        else if (currentCount % 4 == 0)
        {
            ToastService.Notify(new ToastMessage(ToastType.Info, "Count update", "Divisible by 4!"));
        }
        else if (currentCount % 3 == 0)
        {
            ToastService.Notify(new ToastMessage(ToastType.Warning, "Count update", "Divisible by 3!"));
        }
        else if (currentCount % 2 == 0)
        {
            ToastService.Notify(new ToastMessage(ToastType.Danger, "Count update", "Divisible by 2!"));
        }
    }
}
