@inject IHostEnvironment HostEnv

<div class="@($"container {Class}")">
    <div class="@(AlertClass)" role="alert">
        <h4 class="alert-heading">
            <i class="@(IconClass)"></i>
            @Title
        </h4>
        <hr />
        <p class="mb-0">@Message</p>
        @if (HostEnv.IsDevelopment() && string.IsNullOrWhiteSpace(StackTrace) == false)
        {
            <p class="mt-3 mb-0">@StackTrace</p>
        }
    </div>
</div>

@code {
    [Parameter]
    public string Class { get; set; } = "";

    [Parameter]
    public string AlertClass { get; set; } = "alert alert-danger";

    [Parameter]
    public string IconClass { get; set; } = "bi bi-bug h3";

    [Parameter]
    public string Title { get; set; } = "Oops! Something went wrong.";

    [Parameter, EditorRequired]
    public required string Message { get; set; }

    [Parameter]
    public required string? StackTrace { get; set; }
}
