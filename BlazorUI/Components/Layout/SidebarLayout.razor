@inherits LayoutComponentBase

<CascadingValue Name="LayoutName" Value="@LayoutName">
    <div class="d-flex" style="min-width: 350px;">
        
        <Sidebar />

        <div id="sidebar-expanded" class="offcanvas offcanvas-start" tabindex="-1">
            <Sidebar Class="sidebar-offcanvas" />
        </div>

        <nav id="topbar" class="navbar navbar-dark d-flex align-items-center d-md-none fixed-top px-2">
            <button type="button" class="hamburger-button" title="Show navigation menu" data-bs-toggle="offcanvas" data-bs-target="#sidebar-expanded">
                <div class="hamburger rounded-lg bg-slate-600">
                    <div class="opacity-75">
                        <div class="line"></div>
                        <div class="line"></div>
                        <div class="line"></div>
                    </div>
                </div>
            </button>
        </nav>
        <main class="container-fluid mt-3 mt-md-0 mb-3 pt-5 pt-md-0">
            @Body
        </main>
    </div>
</CascadingValue>

@code {
    private const string LayoutName = "SidebarLayout";
}