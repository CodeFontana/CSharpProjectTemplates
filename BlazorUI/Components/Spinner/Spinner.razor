<div class="spinner-container">
        @if (_spinType == 0)
        {
            <Spinner_Wave />
        }
        else if (_spinType == 1)
        {
            <Spinner_ThreeDots />
        }
        else if (_spinType == 2)
        {
            <Spinner_FadingCircle />
        }
        else
        {
            <Spinner_Wave />
        }
    </div>

@code
{
    private Random _rndGen = new();
    private int _spinType = 0;

    protected override void OnInitialized()
    {
        _spinType = _rndGen.Next(3);
    }
}